@page
@model WebAppUnderTheHood.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding:20px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <div class="col-2"><label asp-for="Credential.Name"></label></div>
            <div class="col-5"><input type="text" class="form-control" asp-for="Credential.Name" /></div>
            <span class="text-danger" asp-validation-for="Credential.Name"></span>
        </div>
        <div class="mb-3 row">
            <div class="col-2"><label asp-for="Credential.Password"></label></div>
            <div class="col-5"><input type="password" class="form-control" asp-for="Credential.Password" /></div>
            <span class="text-danger" asp-validation-for="Credential.Password"></span>
        </div>
        <div class="mb-3 row">
            <div class="col-5"></div>
            <div class="col-2"><input type="submit" class="btn btn-primary" value="Login" /></div>
        </div>
    </form>
</div>
